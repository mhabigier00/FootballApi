@model FootballApi.API.DataModels.Match

<h1>@Model.Competition.Name</h1>
<div class="match-details">
    <div class="team-info">
        <img src="@Model.HomeTeam.Crest" alt="@Model.HomeTeam.Name" class="team-logo" />
        <h2>@Model.HomeTeam.Name</h2>
    </div>
    <div class="match-info">
        <div class="scores">
            @if (Model.Status == "FINISHED")
            {
                <span class="score score-finished">@Model.Score.FullTime.Home</span>
                <span class="score-divider">-</span>
                <span class="score score-finished">@Model.Score.FullTime.Away</span>
            }
        </div>
        <p>Date: @Model.UtcDate</p>
        <p>Matchday: @Model.Matchday</p>
        @if (Model.Status == "FINISHED")
        {
            <p>Status: @Model.Status</p>
            <p>Stadium: @Model.Venue</p>
            <p>Half-Time: @Model.Score.HalfTime.Home - @Model.Score.HalfTime.Away</p>
        }
        else
        {
            <p>Status: Upcoming</p>
            <p>Stadium: @Model.Venue</p>
        }
    </div>
    <div class="team-info">
        <img src="@Model.AwayTeam.Crest" alt="@Model.AwayTeam.Name" class="team-logo" />
        <h2>@Model.AwayTeam.Name</h2>
    </div>
</div>
@if(User.Identity.IsAuthenticated)
{
    <button id="addToFavoriteButton" class="add-to-favorite">Add to favorite</button>
}


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function() {
        $('#addToFavoriteButton').click(function() {
                $.ajax({
                    url: '/Home/AddMatch', // Replace with the appropriate URL for your application
                    type: 'POST',
                    data: { matchId: 123 }, // Replace 123 with the actual match ID
                    success: function() {
                        // Handle success, such as displaying a success message
                        alert('Match added to favorites!');
                    },
                    error: function() {
                        // Handle error, such as displaying an error message
                        alert('Failed to add match to favorites.');
                    }
                });
        });
    });
</script>



